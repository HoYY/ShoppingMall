<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoyy.shop.dao.AccountDao">

	<select id="findOneByEmail">
    	select * from users where email = #{email}
    </select>
       
    <insert id="save" parameterType="com.hoyy.shop.vo.Account">
    	insert into users(email, password, name, phone) values(#{email}, #{password}, #{name}, #{phone})
    </insert>
</mapper>