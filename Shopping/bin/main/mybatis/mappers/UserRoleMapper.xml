<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoyy.shop.dao.UserRoleDao">

	<insert id="addRole">
    	insert into user_roles(user_email, role_name) 
    	values(#{email}, #{role_name})
    </insert>
       
    <select id="findByUserEmail" resultType="Role">
    	select * from user_roles where user_email = #{email}
    </select>
</mapper>